{
  "name": "Laravel React Development",
  "dockerComposeFile": "../docker/docker-compose.yml",
  "service": "laravel-app",
  "workspaceFolder": "/var/www/html",
  "customizations": {
    "vscode": {
      // 拡張機能
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "SanderRonde.phpstan-vscode",
        "junstyle.php-cs-fixer",
        "laravel.vscode-laravel",
        "neilbrayfield.php-docblocker",
        "biomejs.biome",
        "bradlc.vscode-tailwindcss",
        "YoavBls.pretty-ts-errors",
        "ms-vscode.vscode-typescript-next",
        "xabikos.JavaScriptSnippets",
        "dsznajder.es7-react-js-snippets",
        "ms-azuretools.vscode-docker",
        "streetsidesoftware.code-spell-checker",
        "mhutchie.git-graph",
        "donjayamanne.githistory",
        "eamodio.gitlens",
        "oderwat.indent-rainbow",
        "christian-kohler.path-intellisense",
        "Gruntfuggly.todo-tree",
        "ryannaddy.laravel-artisan"
      ],
      "settings": {
        // 自動フォーマットを適用
        "editor.formatOnSave": true,
        // PHP CS Fixerのパスを指定
        "php-cs-fixer.executablePath": "${workspaceFolder}/src/vendor/bin/php-cs-fixer",
        // PHP CS Fixerの設定ファイルを指定
        "php-cs-fixer.config": "src/.php-cs-fixer.dist.php",
        // PHP CS Fixerの設定を変更
        "php-cs-fixer.allowRisky": false,
        "php-cs-fixer.pathMode": "override",
        // PHPのフォーマッターを指定
        "[php]": {
          "editor.defaultFormatter": "junstyle.php-cs-fixer"
        },
        // TypeScriptのフォーマッターを指定
        "[typescript]": {
          "editor.defaultFormatter": "biomejs.biome"
        },
        // tsxのフォーマッターを指定
        "[typescriptreact]": {
          "editor.defaultFormatter": "biomejs.biome"
        },
        // jsonのフォーマッターを指定
        "[jsonc]": {
          "editor.defaultFormatter": "biomejs.biome"
        },
        // cssのフォーマッターを指定
        "[css]": {
          "editor.defaultFormatter": "biomejs.biome"
        },
        "editor.codeActionsOnSave": {
          "quickfix.biome": "explicit",
          "source.organizeImports.biome": "explicit"
        }
      }
    }
  },
  "features": {
    // コンテナ内でDockerを使用するための設定
    "docker-from-docker": {
      "version": "latest",
      "moby": true,
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {}
  }
}
